<%= javascript_pack_tag 'index', 'data-turbolinks-track': 'reload' %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center my-4">To Do List</h1>
      <div class="card">
        <div class="card-body">
          <form id="new-task-form" class="mb-4">
            <div class="input-group">
              <input type="text" class="form-control" id="task-content" placeholder="Enter task content">
              <button type="submit" class="btn btn-primary">Add Task</button>
            </div>
          </form>
          <div id="tasks"></div>
        </div>
      </div>
    </div>
  </div>
</div>